{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"formatter": {
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": false
	},
	"files": {
		"includes": ["**/*.js", "**/*.ts", "**/*.svelte", "**/*.json"]
	},
	"assist": {
		"enabled": false
	}
}
